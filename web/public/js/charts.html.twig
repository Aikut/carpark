        type: 'bar',
        data: {
            labels: ['{{ aio_get.word(app.request.locale, '_state') }}'],

            datasets: [{
                label: 'активные',
                data: [org - without_org],
                backgroundColor: "rgba(61,154,197,0.7)"
            }, {
                label: 'неактивные',
                data: [without_org],
                backgroundColor: "rgba(128,128,128,0.7)"
            }
            ]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
