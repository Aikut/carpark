{% extends "::base.html.twig" %}

{% block body %}
    <div class="container" style="padding-top: 120px">
        <div class="row">
            <div class="col-md-12">
                <div class="col-xs-12 ">
                    <div class="page page-current" data-name="about">

                        <div class="page-content">

                            <div class="row">
                                <div class="col-20 text-align-right">
                                    <p><i class="fa fa-clock-o" style="color: #989898; font-size: 19px;"></i></p>
                                </div>
                                <div class="col-80">
                                    <p class="last-session">Мои обходы</p>
                                </div>
                            </div>
                            {% for session in sessions %}

                            <div class="row session">
                                <div class="col-20"></div>
                                <div class="col-80">
                                    <p class="date">{{ session.title }}</p>
                                    <h2>{{ session.countCar }} <span>авто  (Зона {{ session.zone }})</span></h2>

                                    <div class="row">
                                        <div class="slider col-80">
                                            <div class="active" style="width: {{ session.percent }}%"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
